.head{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 50rpx 0;
    background-color: white;
}
.user-img{
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%
}
.user-name{
    margin-top: 40rpx;
    font-size: 30rpx;
}
.order-classify{
    margin: 10rpx 0 20rpx 0;
    display: flex;
    flex-direction: row;
}
.order-item{
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 40rpx;
    background-color: white;
    
}
.order-item-img{
    width: 60rpx;
    height: 60rpx;
}
.order-item-name{
    margin-top: 20rpx;
    font-size: 26rpx;
}
.mine-item-list{
    background-color: white;
}
.mine-item{
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: 1px solid gainsboro;
}
.mine-item-img{
    width: 50rpx;
    height: 50rpx;
    padding: 20rpx 24rpx 20rpx 24rpx;
}
.mine-item-name{
    flex: 1;
    font-size: 28rpx;
}
.mine-item-arrow{
   width: 40rpx;
    height: 40rpx; 
    padding-right: 40rpx;
}