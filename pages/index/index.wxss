/**index.wxss**/
.banner {
    display: block;
}
.banner-img {
    width: 100%;
    height: 100%;
}
.activity{
    padding-top: 20rpx;
    padding-bottom: 10rpx;
    display: flex;
    flex-direction: row;
    height:  150rpx;
}
.discount{
    display: flex;
    flex: 1;
    width: 50%;
    
}
.bought{
    display: flex;
    flex: 1;
    width: 50%;  
}
.goodslist{
    background-color: #fbf9fe;
    display: flex;
    flex-direction: column;
}
.goods-title{
    
    font-size: 30rpx;
}
.line{
    padding: 2rpx;
    background-color: #F0F0F0;
    height: 2rpx;
}
.goods{
    display: flex;
    flex-direction: row;
    height: 150rpx;
    padding-top: 10rpx;
    /*background-color: orange*/
    
}
.goods-img-view{
    /*background-color: rebeccapurple;*/
    width: 150rpx;
}
.gooos-message-view{
    display: flex;
    flex: 1;
    flex-direction: column;
}
.goods-name{
    font-size: 30rpx;
    padding-top: 20rpx;
    padding-left: 20rpx;
}
.goods-price{
    color: red;
    font-size: 25rpx;
    padding-left: 20rpx;
    padding-top: 20rpx;
}
.goods-buy-button{
    align-self:flex-end;
    text-align: center;
    border-radius: 10rpx;
    font-size: 26rpx;
    color: white;
    background: red;
    height: 50rpx;
    width: 150rpx;
    right: 10rpx;
}